{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Request Duration P95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.4 },
              { "color": "red", "value": 0.8 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Request Rate",
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count[1m]))",
          "legendFormat": "req/s"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "gauge",
      "title": "Inventory Low Stock Count",
      "targets": [
        {
          "expr": "inventory_low_stock_count"
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Celery Queue Depth",
      "targets": [
        {
          "expr": "task_queue_depth",
          "legendFormat": "{{queue}}"
        }
      ],
      "gridPos": { "h": 8, "w": 16, "x": 8, "y": 8 }
    }
  ],
  "schemaVersion": 38,
  "title": "GreenHarvest Overview",
  "version": 1
}




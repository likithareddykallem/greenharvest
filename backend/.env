# ============================================
# GreenHarvest Backend Environment Configuration
# Copy this to backend/.env and update with your values
# ============================================

# === Application ===
NODE_ENV=development
PORT=5000
API_VERSION=v1

# === Database ===
MONGODB_URI=mongodb://localhost:27017/greenharvest
# For production with auth:
# MONGODB_URI=mongodb://username:password@localhost:27017/greenharvest?authSource=admin

# === Redis (used by both Node.js and Celery) ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# === JWT Authentication ===
# IMPORTANT: Generate these with the command below and replace!
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=8597416903ea88f4ec15705fae207e54d7f4b71ebee5395574cefc03f7323061
REFRESH_TOKEN_SECRET=b1e0d18e5acdde01553ef0442cbbc6e5038d41937e7c6615bd1aba7cfaace02d
JWT_EXPIRE=15m
REFRESH_TOKEN_EXPIRE=7d

# === Payment Gateway (Stripe) ===
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === Cloud Storage (Cloudinary) ===
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
MAX_IMAGE_SIZE=5242880
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# === Email Service (Gmail SMTP) ===
# For Gmail, generate app password: https://myaccount.google.com/apppasswords
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM=noreply@greenharvest.com

# === SMS Service (Twilio) ===
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# === URLs ===
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin
BACKEND_URL=http://localhost:5000

# === Monitoring & Logging ===
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000
LOGSTASH_ENABLED=false
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# === Rate Limiting ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# === Session ===
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600000

# === Inventory ===
INVENTORY_LOCK_TIMEOUT=30000
LOW_STOCK_THRESHOLD=10

# === Features ===
ENABLE_SUPPLY_CHAIN_TRACKING=true
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365